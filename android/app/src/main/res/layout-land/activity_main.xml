<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@android:color/black"

    >

    <!-- Backward Triangle Button -->
    <ImageButton
        android:id="@+id/btnBackward"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_backward_triangle"
        android:background="@null"
        android:contentDescription="Backward"
        android:scaleType="fitCenter"
        /> <!-- Removed padding -->

        <Button
            android:id="@+id/btnCurrentElement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="No Devices"
            android:textSize="32sp"
            android:gravity="center"
            android:backgroundTint="@android:color/holo_blue_light"
            android:layout_margin="20dp"/>


    <!-- Forward Triangle Button -->
    <ImageButton
        android:id="@+id/btnForward"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_forward_triangle"
        android:background="@null"
        android:contentDescription="Forward"
        android:scaleType="fitCenter"
        /> <!-- Removed padding -->

</LinearLayout>
